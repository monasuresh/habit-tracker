{{!--

login form handlebar template

--}}

<header>        
    <h1>Habit Tracker - Login</h1>
</header>

    <p>Provide your login details below to authenticate</p>
    
    <main>
        <form action="/login" method="POST" id="loginForm" class="login-form" onsubmit="return validateLoginForm(this)">
            
            <label>
            Email:&nbsp;<input type="text" id="emailAddress" name="emailAddress" value="{{emailAddress}}">
            </label><br><br>
            <label>
            Password:&nbsp;<input type="password" id="userPassword" name="userPassword" value="{{userPassword}}">
            &nbsp;<input type="checkbox" onclick="showPass('userPassword')">Show Password
            </label>
            <br><p class="error" id="error">{{error}}</p><br>
            <button type="submit">Login</button>
            <button type="reset">Clear Form</button><br><br>
            If you do not have a user account, you can <a href="/register">register as new user</a>
            {{!-- <input type="hidden" name='_method' value="PUT" /> --}}
        </form>
    </main>
  